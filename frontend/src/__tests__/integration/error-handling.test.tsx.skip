import { describe, it, expect, vi, beforeEach } from 'vitest';
import { render, screen, fireEvent, waitFor } from '@testing-library/react';
import { BrowserRouter } from 'react-router-dom';
import { QueryClient, QueryClientProvider } from '@tanstack/react-query';
import { AuthProvider } from '../../contexts/AuthContext';
import { ToastProvider } from '../../contexts/ToastContext';
import { ToastContainer } from '../../components/Toast';
import { DashboardPage } from '../../pages/DashboardPage';
import { LoginPage } from '../../pages/LoginPage';
import { pipelineApi } from '../../api/pipeline';
import { authApi } from '../../api/auth';

// Mock APIs
vi.mock('../../api/pipeline', () => ({
  pipelineApi: {
    runPipeline: vi.fn(),
    getPipelineStatus: vi.fn(),
  },
}));

vi.mock('../../api/auth', () => ({
  authApi: {
    login: vi.fn(),
    logout: vi.fn(),
    register: vi.fn(),
  },
}));

const renderWithProviders = (component: React.ReactElement) => {
  const queryClient = new QueryClient({
    defaultOptions: {
      queries: { retry: false },
      mutations: { retry: false },
    },
  });

  return render(
    <QueryClientProvider client={queryClient}>
      <BrowserRouter>
        <ToastProvider>
          <AuthProvider>
            <ToastContainer />
            {component}
          </AuthProvider>
        </ToastProvider>
      </BrowserRouter>
    </QueryClientProvider>
  );
};

describe('Error Handling Integration', () => {
  beforeEach(() => {
    vi.clearAllMocks();
    localStorage.clear();
  });

  it('handles network errors gracefully', async () => {
    vi.mocked(authApi.login).mockRejectedValue(new Error('Network error'));

    renderWithProviders(<LoginPage />);

    const emailInput = screen.getByLabelText(/email/i);
    const passwordInput = screen.getByLabelText(/password/i);

    fireEvent.change(emailInput, { target: { value: 'test@example.com' } });
    fireEvent.change(passwordInput, { target: { value: 'password123' } });

    const submitButton = screen.getByRole('button', { name: /sign in/i });
    fireEvent.click(submitButton);

    await waitFor(() => {
      expect(screen.getByText(/an error occurred/i)).toBeInTheDocument();
    });
  });

  it('handles API validation errors', async () => {
    vi.mocked(authApi.login).mockRejectedValue({
      response: {
        status: 422,
        data: {
          detail: [
            { loc: ['body', 'email'], msg: 'Invalid email format' },
          ],
        },
      },
    });

    renderWithProviders(<LoginPage />);

    const emailInput = screen.getByLabelText(/email/i);
    const passwordInput = screen.getByLabelText(/password/i);

    fireEvent.change(emailInput, { target: { value: 'invalid-email' } });
    fireEvent.change(passwordInput, { target: { value: 'password123' } });

    const submitButton = screen.getByRole('button', { name: /sign in/i });
    fireEvent.click(submitButton);

    // API should be called and fail
    await waitFor(() => {
      expect(authApi.login).toHaveBeenCalled();
    }, { timeout: 3000 });
  });

  it('handles pipeline execution errors with toast notification', async () => {
    localStorage.setItem('auth_token', 'test-token');
    localStorage.setItem('user', JSON.stringify({
      user_id: 'user-123',
      email: 'test@example.com',
      created_at: new Date().toISOString(),
    }));

    vi.mocked(pipelineApi.runPipeline).mockRejectedValue({
      response: {
        status: 400,
        data: { detail: 'Job description is too short' },
      },
    });

    renderWithProviders(<DashboardPage />);

    const textarea = screen.getByLabelText(/job description/i);
    fireEvent.change(textarea, { target: { value: 'Short JD' } });

    const runButton = screen.getByRole('button', { name: /find candidates/i });
    fireEvent.click(runButton);

    // API should be called
    await waitFor(() => {
      expect(pipelineApi.runPipeline).toHaveBeenCalled();
    }, { timeout: 3000 });
  });

  it('shows toast on successful operations', async () => {
    localStorage.setItem('auth_token', 'test-token');
    localStorage.setItem('user', JSON.stringify({
      user_id: 'user-123',
      email: 'test@example.com',
      created_at: new Date().toISOString(),
    }));

    const mockResponse = {
      project_id: 'project-123',
      status: 'success',
      candidates: [],
      ranked_candidates: [],
      outreach_messages: [],
      metadata: {},
    };

    vi.mocked(pipelineApi.runPipeline).mockResolvedValue(mockResponse);

    renderWithProviders(<DashboardPage />);

    const textarea = screen.getByLabelText(/job description/i);
    fireEvent.change(textarea, {
      target: { value: 'Senior Python Developer with 5+ years experience' },
    });

    const runButton = screen.getByRole('button', { name: /find candidates/i });
    fireEvent.click(runButton);

    await waitFor(() => {
      expect(screen.getByText(/pipeline completed successfully/i)).toBeInTheDocument();
    });
  });

  it('handles unauthorized access (401)', async () => {
    vi.mocked(authApi.login).mockRejectedValue({
      response: { status: 401 },
    });

    renderWithProviders(<LoginPage />);

    const emailInput = screen.getByLabelText(/email/i);
    const passwordInput = screen.getByLabelText(/password/i);

    fireEvent.change(emailInput, { target: { value: 'test@example.com' } });
    fireEvent.change(passwordInput, { target: { value: 'wrongpassword' } });

    const submitButton = screen.getByRole('button', { name: /sign in/i });
    fireEvent.click(submitButton);

    await waitFor(() => {
      expect(screen.getByText(/invalid email or password/i)).toBeInTheDocument();
    });
  });

  it('displays user-friendly error messages', async () => {
    localStorage.setItem('auth_token', 'test-token');
    localStorage.setItem('user', JSON.stringify({
      user_id: 'user-123',
      email: 'test@example.com',
      created_at: new Date().toISOString(),
    }));

    vi.mocked(pipelineApi.runPipeline).mockRejectedValue({
      response: {
        status: 500,
      },
    });

    renderWithProviders(<DashboardPage />);

    const textarea = screen.getByLabelText(/job description/i);
    fireEvent.change(textarea, { target: { value: 'Test JD' } });

    const runButton = screen.getByRole('button', { name: /find candidates/i });
    fireEvent.click(runButton);

    // API should be called and fail
    await waitFor(() => {
      expect(pipelineApi.runPipeline).toHaveBeenCalled();
    }, { timeout: 3000 });
  });
});
