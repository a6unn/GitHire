{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GitHub Sourcer Input Schema",
  "description": "Input is JobRequirement from Module 001",
  "type": "object",
  "properties": {
    "role": {
      "type": ["string", "null"]
    },
    "required_skills": {
      "type": "array",
      "items": {"type": "string"},
      "minItems": 0
    },
    "preferred_skills": {
      "type": "array",
      "items": {"type": "string"}
    },
    "years_of_experience": {
      "type": "object",
      "properties": {
        "min": {"type": ["integer", "null"], "minimum": 0},
        "max": {"type": ["integer", "null"], "minimum": 0},
        "range_text": {"type": ["string", "null"]}
      },
      "required": ["min", "max", "range_text"]
    },
    "seniority_level": {
      "type": ["string", "null"],
      "enum": ["Junior", "Mid-level", "Senior", "Staff", "Principal", null]
    },
    "location_preferences": {
      "type": "array",
      "items": {"type": "string"}
    },
    "domain": {
      "type": ["string", "null"]
    },
    "confidence_scores": {
      "type": "object"
    },
    "original_input": {
      "type": "string",
      "minLength": 1
    },
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    }
  },
  "required": [
    "required_skills",
    "preferred_skills",
    "years_of_experience",
    "location_preferences",
    "confidence_scores",
    "original_input",
    "schema_version"
  ]
}
